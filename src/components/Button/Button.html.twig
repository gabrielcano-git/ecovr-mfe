{# Button component #}
{% set base_class = 'btn' %}

{# 
  Variáveis esperadas:
  - tag: string (padrão: 'a')
  - disabled: boolean (padrão: false)
  - variants: array (padrão: ['primary'])
  - attributes: objeto de atributos do Drupal
#}

{% set tag = tag|default('a') %}
{% set disabled = disabled|default(false) %}
{% set variants = variants|default(['primary']) %}

{% set classes = [
  base_class,
  variants|map(variant => base_class ~ '--' ~ variant)|join(' ')
] %}

<{{ tag }}{{ attributes.addClass(classes).setAttribute('disabled', disabled ? 'disabled' : null) }}>
  {{ content }}
</{{ tag }}>